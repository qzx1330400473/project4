body
    margin 0
    padding 0
    background #efefef

    .header
      position absolute
      top 0
      z-index 5
      width 100%
      color #fff
      background-color transparent
      .icon-back
        width 65px
        padding-left 15px
        background transparent url("../../../public/img/APP/index/nav_icon_down@2x.png") no-repeat left 50px center
        background-size 12px 6px
        line-height 50px
        font-style normal
      .header_title
        padding-right 80px
        position absolute
        left 20%

    .search_box
      position absolute
      top 50px
      right 15px
      left 15px
      z-index 5
      .search_input
        height 30px
        border-radius 3px
        background-color #f1f1f1
        text-align center
        line-height 30px
        color #999
        .icon-search
          display inline-block
          width 30px
          height 30px
          background url("../../../public/img/APP/index/nav_icon_search@2x.png") no-repeat center
          background-size 16px
          vertical-align bottom

    .slider_box
      width 100%
      height 320px
      overflow hidden
      .slider_container
        width 300%
        transition all .5s
        transform translateX(0)
        &:after
          content ''
          display block
          visibility hidden
          height 0
          clear both
    .slider_block
      float left
      width 375px
      height 320px
      background-color #33acfe
      &:nth-child(2)
        background-color #0000ed
      &:nth-child(3)
        background-color #00ff00
      &:nth-child(4)
        background-color #ff6666
      &:nth-child(5)
        background-color #009926
    .point_box
      position relative
      top -30px
      z-index 5
      height 16px
      text-align center
      .point_block
        display inline-block
        width 16px
        height 16px
        background url("../../../public/img/APP/index/banner_icon_point_nor@2x.png") no-repeat center
        background-size 10px
        &.active
          background url("../../../public/img/APP/index/banner_icon_point_press@2x.png") no-repeat center
          background-size 10px

    .query_box
      display flex
      width 100%
      height 50px
      margin-top 10px
      background-color #fff
      .query_block
        flex 1
        &.active
          background-color #0000ed
        .text
          display block
          height 35px
          text-align center
          line-height 35px
        .icon
          display block
          height 15px
          background url("../../../public/img/APP/index/content_icon02_nor@2x.png") no-repeat center
      .query_price
        width 50px
        height 50px
        background url("../../../public/img/APP/index/content_icon01_nor@2x.png") no-repeat center
        background-size 30px
        &.active-down
          background url("../../../public/img/APP/index/content_icon01_down@2x.png") no-repeat center
          background-size 30px
        &.active-up
          background url("../../../public/img/APP/index/content_icon01_litre@2x.png") no-repeat center
          background-size 30px

    .block_box
      display flex
      padding 10px
      background-color #fff
      .img_box
        background url("../../../public/img/APP/index/content_img_list@2x.png") no-repeat
        background-size 100%
        flex 3
        color #727272
        font-size 14px
      .info_box
        flex 5
        margin-left 10px
        .info-title
            font-size 16px
            font-weight bold
        .info-address
            font-size 14px
        .info-tag_box
            font-size 12px
            text-align center
            margin-top 3px
            margin-bottom 3px
            padding 3px
            border 1px solid #ea5404
            color #ea5404
            border-radius 5px
            width 64px
        .commision
            display block
            float right
            margin-right 10px
            font-size 12px
            margin-top 5px

    .down-box
      display: none
    .bottom
        position fixed
        height 50px
        background #fff
        bottom 0
        left 0
        right 0
        .bottom-list
            list-style none
            font-size 12px
            .list-first
                float left
                color #b4b4b4
                background url("../../img/APP/bottom-bar/bottom_press_icon04@2x.png") no-repeat
                background-size 95% 35%
                padding 25px 0
            .list-second
                float left
                margin-left 40px
                color #b4b4b4
                background url("../../img/APP/bottom-bar/bottom_nor_icon03@2x.png") no-repeat
                background-size 95% 35%
                padding 25px 0
            .list-third
                float left
                margin-left 40px
                width 88px
                height 66px
                background url("../../img/APP/bottom-bar/bottom_icon05@2x.png") no-repeat
                background-size 60% 80%
                margin-top -10px
            .list-forth
                float left
                margin-right 40px
                color #b4b4b4
                background url("../../img/APP/bottom-bar/bottom_nor_icon02@2x.png") no-repeat
                background-size 95% 35%
                padding 25px 0
            .list-fifth
                float left
                margin-right 40px
                color #b4b4b4
                background url("../../img/APP/bottom-bar/bottom_nor_icon01@2x.png") no-repeat
                background-size 100% 35%
                padding 25px 0