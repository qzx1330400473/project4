body
    background #efefef
    margin 0
    padding 0

    .header
        height 35px
        background #fff
        line-height 35px

        .icon-back
            content ''
            position absolute
            left 15px
            display block
            width 20px
            height 36px
            background url("../../../public/img/APP/loading/nav_back_icon@2x.png") no-repeat 0 center
            background-size 50%
        .header_title
            display inline-block
            width 100%
            color:#ED692B
            text-align center
            font-weight bold

    .head
        margin-left 10px
        margin-top 10px
        height 32px
        line-height 32px
        color #a1a1a6
    .content
        height 240px
        background #fff
        padding-top 10px
        .head-portrait
            font-size 12px
            color #fff
            padding-top 25px
            padding-left 10px
            height 40px
            width 55px
            margin-left 40%
            background #878787
            border-radius 50%
            margin-bottom 10px

    .list
        list-style none
        .input
            border none
            padding-left 10px
            width 290px
            height 30px
            color #b4b4b4
            background #efeff4
            margin-bottom 5px
            border-radius 5px
    .chouse
        margin-left 10px
        margin-top 10px
        height 32px
        line-height 32px
        color #a1a1a6
    .main
        height 135px
        background #fff
        .input-num
            border none
            padding-left 10px
            margin-left 10%
            width 290px
            height 30px
            color #b4b4b4
            background #efeff4
            margin-bottom 5px
            margin-top 10px
            border-radius 5px
        .about
            list-style none
            margin-left -25px
            margin-bottom 20px
            .about-box
                float left
                background #878787
                height 65px
                line-height 65px
                color #fff
                width 100px
                text-align center
                font-size 12px
                margin-right 20px
                border-radius 5px
    .bt_box
        margin-top 30px
        .bt_login
            margin-left 5px
            margin-right 5px
            width 95%
            height 44px
            background #ED692B
            color #fff
            font-size 18px
            border-radius 8px
            border none



