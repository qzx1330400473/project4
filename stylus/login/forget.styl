body
    background #efefef
    margin 0
    padding 0

.header
    height 35px
    background #fff
    line-height 35px
    .icon-back
        content ''
        position absolute
        left 15px
        display block
        width 20px
        height 36px
        background url("../../../public/img/APP/loading/nav_back_icon@2x.png") no-repeat 0 center
        background-size 50%

    .header_title
        display inline-block
        width 100%
        color:#ED692B
        text-align center
        font-weight bold

.form-list
    height 80px
    padding 0
    margin-top 20px

    .form-cell
        display flex
        height 40px
        line-height 40px

        .form-cell-name
            display inline-block
            width 50px
            padding-left 30px
            background url("../../../public/img/APP/loading/content_ID_icon@2x.png") 5px 10px no-repeat #fff
            background-size 25% 50%

        .form-cell-input
            flex 1
            border none
            outline none
    .number
        border-top 1px solid #d6d7dc
        height 40px
        line-height 40px
        background #fff

        .form-cell-num
            display inline-block
            width 80px
            padding-left 30px
            background url("../../../public/img/APP/loading/content_verify_icon@2x.png") 5px no-repeat #fff
            background-size 15px 18px
        .form-key-word
            border none
            outline none
            margin-left -15px
            width 100px
        .btn
            height 30px
            line-height 30px
            float right
            margin-right 20px
            margin-top 5px
            background #ea5404
            color #fff
            text-align center
            border-radius 8px
            border none

    .form-cell-password
             display flex
             height 40px
             line-height 40px
             border-top 1px solid #d6d7dc

        .form-cell-key
            display inline-block
            width 50px
            padding-left 30px
            background  url("../../../public/img/APP/loading/content_password_icon@2x.png") 5px 10px no-repeat #fff
            background-size 25% 50%
        .form-cell-key1
            display inline-block
            border-top 1px solid #d6d7dc
            width 50px
            padding-left 30px
            background  url("../../../public/img/APP/loading/content_password_icon@2x.png") 5px 10px no-repeat #fff
            background-size 25% 50%

        .form-cell-keyword
            flex 1
            border none
            outline none

.bt_box
    margin-top 30px
    .bt_login
        margin-left 5px
        margin-right 5px
        width 95%
        height 44px
        background #c7c7c7
        color #fff
        font-size 18px
        border-radius 8px
        margin-top 60px
        border none