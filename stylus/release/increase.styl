body
    background #efefef
    margin 0
    padding 0

    .header
        height 35px
        background #fff
        line-height 35px

        .icon-back
            content ''
            position absolute
            left 15px
            display block
            width 20px
            height 36px
            background url("../../../public/img/APP/loading/nav_back_icon@2x.png") no-repeat 0 center
            background-size 50%
        .header_title
            display inline-block
            width 100%
            text-align center
            font-weight bold
    .content
        padding-left 8%
        padding-right 4%
        .name
            width 94%
            padding-left 10px
            background #fff
            border-radius 3px
            height 40px
            border 0
            margin-top 10px
        .tel_num
            width 94%
            padding-left 10px
            background #fff
            border-radius 3px
            height 40px
            border 0
            margin-top 10px
    .btn
        background #fff
        width 97%
        color #ea5404
        margin-top 10px
        text-align center
        height 45px
        line-height 45px
        border-radius 3px